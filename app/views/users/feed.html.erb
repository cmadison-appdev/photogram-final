
<h1><%= @the_user.username %></h1>
<dl>
  <dt>Private</dt>
    <dd><%= @the_user.private %></dd>
  <dt>Followers</dt>
    <dd>
      <%= @the_user.followers.count %>
      <div>
        <a href="/delete_follow_request/2408">
          Unfollow
        </a>
      </div>
    </dd>
  <dt>Following</dt>
    <dd><%= @the_user.following.count %></dd>
</dl>
<nav>
  <ul>
    <li>
      <a href="/users/<%= @the_user.username %>">Profile</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/discover">Discover</a>
    </li>
  </ul>
</nav>

<% feed_count = 0%>

<% @the_user.following.each do |a_user|  %>
  <% feed_count = feed_count + a_user.own_photos.count %>
<% end %>

<h2>Feed (<%= feed_count %>)</h2>
<table border="1">
  <tbody><tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th></th>
  </tr>
<% @the_user.following.each do |a_user|  %>
  <tr>
    <% a_user.own_photos.each do |a_photo| %>
    <td>
      <img src="<%= a_photo.image %>">
    </td>

    <td>
      <%= a_photo.owner.username %>
    </td>

    <td>
      <%= a_photo.caption %>
    </td>

    <td>
      <%= time_ago_in_words(a_photo.created_at) %> ago
    </td>

    <td>
      <%= a_photo.likes.count %>
    </td>

    <td>
      <a href="/photos/<%= a_photo.id %>">
        Show details
      </a>
    
    </td>
    
  </tr>
  <% end %>
    <% end %>